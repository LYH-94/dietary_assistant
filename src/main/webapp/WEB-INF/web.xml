<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.jcp.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.jcp.com/xml/ns/javaee http://java.jcp.com/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>helloServlet</servlet-name>
        <servlet-class>com.lyh.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>helloServlet</servlet-name>
        <url-pattern>/pages/helloServlet</url-pattern>
    </servlet-mapping>

</web-app>